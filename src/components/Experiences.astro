---
import { experiences } from "../utils/experiences";

const experiencesList = Object.values(experiences);
---

{
  experiencesList.map((experience) => (
    <article class="experience">
      <div>
        <h3 class="organization">{experience.organization}</h3>
        <h4 class="position" aria-label={experience.position}>
          {experience.position}
        </h4>
        <span class="period">
          {experience.startDate}-{experience.endDate}
        </span>
      </div>
      <p class="details">{experience.details}</p>
    </article>
  ))
}

<style>
  .experience {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
  .organization {
    font-size: 1.25rem;
  }
  .position {
    opacity: 0.8;
  }
  .period {
    font-size: 0.8rem;
    opacity: 0.7;
  }
  .details {
    grid-column: span 2 / span 2;
  }
</style>
