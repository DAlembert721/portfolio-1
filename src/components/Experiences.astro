---
import { experiences } from "../utils/experiences";

const experiencesList = Object.values(experiences);
---

{
  experiencesList.map((experience) => (
    <article class="experience">
      <div>
        <h3 class="organization">{experience.organization}</h3>
        <h4 class="position" aria-label={experience.position}>
          {experience.position}
        </h4>
        <span class="period">
          {experience.startDate}-{experience.endDate}
        </span>
      </div>
      <p>{experience.details}</p>
    </article>
  ))
}

<style is:global>
  .section:has(article.experience) {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>

<style>
  .experience {
    display: flex;
    justify-content: space-between;
  }
  .organization {
    font-size: 1.25rem;
  }
  .position {
    opacity: 0.8;
  }
  .period {
    font-size: 0.8rem;
    opacity: 0.7;
  }
</style>
